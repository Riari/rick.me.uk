---
const { title, backgroundImage = null } = Astro.props;

const hasAfterContent = Astro.slots.has('after');
---

<div
    class:list={["header", {'with-background': backgroundImage != null }, {'with-after': hasAfterContent}]}
    style={{ backgroundImage: backgroundImage ? `url(${backgroundImage.src})` : undefined }}>
    <div class="content">
        <div><h1>{title}</h1></div>
        <slot />
    </div>

    {hasAfterContent && <div class="after">
        <slot name="after" />
    </div>}
</div>

<style lang="scss">
.header {
    padding: 3rem 0;
    background-size: cover;
    background-position: center;
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-foreground);
    text-align: center;

    .content {
        padding: 0 1rem;
    }

    &.with-background {
        margin-bottom: 2rem;
        border-radius: 1rem;
        box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.05), 0 0 5px rgba(0, 0, 0, 0.1);

        h1 {
            margin-bottom: .5rem;
            font-variation-settings: "wdth" 100;
        }
    }

    &.with-after {
        padding-bottom: 0;

        .after {
            margin-top: 2rem;
            padding: 0.5rem 1rem 0.75rem 1rem;
            border-bottom-left-radius: 1rem;
            border-bottom-right-radius: 1rem;
            background: linear-gradient(to right, rgba(12, 15, 19, 0) 0%, rgba(12, 15, 19, 0.3) 50%, rgba(12, 15, 19, 0) 100%);
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
        }
    }

    h1 {
        display: inline-block;
        margin: 0;
        font-size: 3rem;
        color: #FFAA87;
        background-image: linear-gradient(135deg, #FFAA87, #FFCAA9 50%, #FF8D87 100%);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
}

@media (width < 48rem) {
    .header {
        font-size: 1.2rem;

        h1 {
            font-size: 2.5rem;
        }
    }
}
</style>
