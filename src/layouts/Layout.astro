---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

import shapesTop from "../assets/shapes-top.svg";
import shapesBottom from "../assets/shapes-bottom.svg";
import noise from "../assets/noise.svg";

import Navbar from "../components/Navbar.astro";

interface Props {
    title: string;
    description?: string;
    image?: string;
    withNavbar?: boolean;
    withShapes?: boolean;
    withGradient?: boolean;
}

const {
    title,
    description = SITE_DESCRIPTION,
    image = "/default-og-preview.png",
    withNavbar = true,
    withShapes = true,
    withGradient = true
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
let pageTitle = title ? `${title} â€¢ ${SITE_TITLE}` : SITE_TITLE;
---

<!doctype html>
<html lang="en">
    <head>
        <title>{pageTitle}</title>

        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />

        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={pageTitle} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(image, Astro.url)} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={pageTitle} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={new URL(image, Astro.url)} />

        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Saira:wdth,wght@50..125,100..900&family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">

        <link rel="preload" href="/fonts/JetBrainsMono.woff2" as="font" type="font/woff2" />
    </head>
    <body class:list={[{"with-gradient": withGradient}]}>
        <div class="backdrops">
            { withShapes && (
                <div style={`background-image: url(${shapesTop.src})`} class="backdrops__shapes-top"></div>
                <div style={`background-image: url(${shapesBottom.src})`} class="backdrops__shapes-bottom"></div>
            )}
            <div style={`background-image: url(${noise.src})`} class="backdrops__noise"></div>
        </div>

        { withNavbar && <div style="padding-top: 6rem;"><Navbar /></div> }

        <div class="page">
            <slot />
        </div>

        <script src="../scripts/client.ts"></script>
    </body>
</html>

<style lang="scss">
:root {
    --color-foreground: #ffffff;
    --color-foreground-muted-1: #d6dde7;
    --color-foreground-muted-2: #bfc1c9;
    --color-foreground-muted-3: #898a98;
    --color-foreground-inverted: #252732;
    --color-background-upper: #272c3d;
    --color-background-lower: #1b1d25;
    --color-link: #82aaff;
    --color-brand: #ffb49c;
    --color-accent-1: #7cdeb5;
    --color-accent-2: #b8a4ff;
    --color-accent-3: #ff96a7;
    --color-accent-4: #f3d68c;
    --color-overlay-light: rgba(255, 255, 255, 0.08);
}

@font-face {
    font-family: 'JetBrains Mono';
    font-style: normal;
    font-weight: 400 700;
    font-display: swap;
    src: local('JetBrains Mono'), url('/fonts/JetBrainsMono.woff2') format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
}

html,
body {
    margin: 0;
}

body {
    position: relative;
    min-height: 100vh;
    background-color: #1b1b24;
    font-family: "Saira", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    font-variation-settings: "wdth" 100;
    color: var(--color-foreground);

    &.with-gradient {
        background: linear-gradient(145deg, var(--color-background-upper), var(--color-background-lower));
    }
}

.backdrops div {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100vw;
    z-index: -1;
}

.backdrops {
    &__shapes-top {
        background-position: center top;
        background-size: 100% auto;
        background-repeat: no-repeat;
        opacity: 0.65;
    }

    &__shapes-bottom {
        background-position: center bottom;
        background-size: 100% auto;
        background-repeat: no-repeat;
        opacity: 0.65;
    }

    &__noise {
        background-position: center top;
        background-repeat: repeat;
        background-size: 2048px;
        opacity: 0.08;
    }
}

.page {
    padding-bottom: 2rem;
}
</style>

<style is:global lang="scss">
.expressive-code {
    margin: 1.2em 0;
    --ec-frm-trmTtbBg: #232734;
    --ec-frm-edTabBarBg: #232734;
    --ec-frm-edActTabIndBtmCol: var(--color-accent-4);

    figure.frame {
        --header-border-radius: .3em;
        box-shadow: none;

        .copy {
            --ec-frm-tooltipSuccessBg: var(--color-accent-1);
            --ec-frm-tooltipSuccessFg: var(--color-foreground-inverted);

            button::before {
                border: none;
            }
        }
    }

    pre code .code span {
        font-style: normal;
    }
}

hr {
    border: 0;
    margin: 2rem 0;
    height: 4px;
    border-radius: 2px;
    background: var(--color-overlay-light);
}

h1, h2, h3 {
    font-weight: 600;
    font-variation-settings: "wdth" 125;
}

ul li {
    margin: .25rem 0;
}

.text-center {
    text-align: center;
}

.text-right {
    text-align: right;
}

.text-muted-1 {
    color: var(--color-foreground-muted-1);
}

.text-muted-2 {
    color: var(--color-foreground-muted-2);
}

a {
    color: var(--color-link);
    text-decoration: underline solid var(--color-overlay-light);
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;

    &:hover {
        color: var(--color-foreground);
        text-decoration-color: var(--color-foreground);
    }
}

a.accent-1 {
    color: var(--color-accent-1);

    &:hover {
        color: var(--color-foreground);
    }
}

a.accent-2 {
    color: var(--color-accent-2);

    &:hover {
        color: var(--color-foreground);
    }
}

a.accent-3 {
    color: var(--color-accent-3);

    &:hover {
        color: var(--color-foreground);
    }
}

a.accent-4 {
    color: var(--color-accent-4);

    &:hover {
        color: var(--color-foreground);
    }
}

.badge {
    display: inline-block;
    background-color: var(--color-brand);
    font-weight: 500;
    color: var(--color-foreground-inverted);
    padding: 0 0.5rem;
    border-radius: 0.25rem;
}

.posts {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 3rem;

    .card-header {
        display: flex;
        flex-direction: row-reverse;
        align-items: center;
        gap: 1rem;
        margin-bottom: .75rem;

        .card-header-title {
            flex: 1;
            margin: 0 !important;
            font-size: 1.4rem !important;
        }
    }
}

.tags {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: .75rem;
    list-style: none;
    padding: 0;
    margin: 0;

    li {
        margin: 0;
    }

    li a {
        display: inline-block;
        font-size: 1.1rem;
        font-weight: 500;
        text-decoration: none;
        color: var(--color-brand);

        &:hover {
            color: inherit;
        }
    }
}

.tags.accent-1 li a {
    color: var(--color-accent-1);
    &:hover { color: inherit; }
}

.tags.accent-2 li a {
    color: var(--color-accent-2);
    &:hover { color: inherit; }
}

.tags.accent-3 li a {
    color: var(--color-accent-3);
    &:hover { color: inherit; }
}

.tags.accent-4 li a {
    color: var(--color-accent-4);
    &:hover { color: inherit; }
}

ul.pills {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: .5rem;
    list-style: none;
    padding: 0;
    margin: 2rem 0;

    li {
        display: flex;
        gap: 2px;
        font-size: 1rem;
        font-weight: 500;

        &.accent-1 span:last-child {
            color: var(--color-accent-1);
        }

        &.accent-2 span:last-child {
            color: var(--color-accent-2);
        }

        &.accent-3 span:last-child {
            color: var(--color-accent-3);
        }

        &.accent-4 span:last-child {
            color: var(--color-accent-4);
        }

        span:first-child {
            padding: 0.2rem 0.75rem 0.2rem 1rem;
            border-top-left-radius: 1rem;
            border-bottom-left-radius: 1rem;
            background: var(--color-overlay-light);
        }

        span:last-child {
            padding: 0.2rem 1rem 0.2rem 0.75rem;
            border-top-right-radius: 1rem;
            border-bottom-right-radius: 1rem;
            background: var(--color-overlay-light);
            color: var(--color-foreground-muted-2);

            a {
                text-decoration: none;
            }
        }
    }
}

.grid {
    display: grid;
    gap: 1rem;
}

.grid-2 {
    grid-template-columns: repeat(2, 1fr);
}

.grid-3 {
    grid-template-columns: repeat(3, 1fr);
}

.caption {
    margin: 1rem 0 2rem 0;
    text-align: center;
    font-size: .9em;
    font-style: italic;
    color: var(--color-foreground-muted-2);
}

table {
    width: 100%;
    border-collapse: collapse;

    th, td {
        padding: 0.3rem .7rem;
        border: 1px solid var(--color-overlay-light);
    }
}

p > code, li > code {
    display: inline-block;
    padding: .1rem .4em;
    border-radius: .3em;
    background: #292c3e;
    font-size: 1rem;
    font-family: "JetBrains Mono", monospace;
    word-wrap: anywhere;
}

.medium-zoom-overlay, .medium-zoom-image {
    z-index: 200;
}

@media (prefers-reduced-motion: reduce) {
    *,
    *::before {
        transition: none !important;
    }
}

@media (width < 48rem) {
    .posts .card-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .grid-2 {
        grid-template-columns: repeat(1, 1fr);
    }

    .grid-3 {
        grid-template-columns: repeat(1, 1fr);
    }
}
</style>
